<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.cookwithpuppy">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_dog"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_dog_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.AboutActivity"></activity>
        <activity android:name=".ui.add_recipe.AddRecipeActivity" />
        <activity android:name=".ui.display_recipe.DisplayRecipe" />
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>